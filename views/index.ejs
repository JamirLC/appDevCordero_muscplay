<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>Admin</title>
  <style>
    .navbar-black {
      background-color: #000000 !important;
    }

    .sidebar-dark {
      background-color: #121212;
    }

    .music-control button {
      color: white;
      background-color: transparent;
      border: none;
    }

    .music-control button:hover {
      color: #ffc107;
    }
  </style>
</head>

<body>

  <!-- Top Navbar -->
  <nav class="navbar navbar-expand-lg navbar-black w-100">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="#">Bootleg Spotify</a>
      <div class="collapse navbar-collapse" id="navbarTop">
        <form class="d-flex ms-auto" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-light" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container-fluid d-flex flex-column" style="min-height: 80vh;">
    <div class="row flex-grow-1">

      <!-- Sidebar -->
      <div class="col-3 sidebar-dark text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
          <h4>Your Library</h4>
          <h4><i class="bi bi-music-note-list"></i></h4>
        </div>


        <hr>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link text-white fs-5" href="/create"><i class="bi bi-plus-square"></i> Add Playlist</a>
            <% information.forEach(info => { %>
            <a class="nav-link text-white" href="#"><i class="bi bi-music-note-beamed"></i> <%= info.name %></a>
          </li>
           <% }) %>
        </ul>
      </div>

      <!-- Content -->
      <div class="col-9 bg-light py-3">
        <h3>Content Section</h3>
        <p>This is where your content will go.</p>
      </div>
    </div>
  </div>

  <!-- Bottom Navbar with Music Controls -->
  <nav class="navbar navbar-expand-lg navbar-black w-100 mt-auto" style="min-height: 11vh;">
    <div class="container-fluid justify-content-center music-control">
      <button class="me-3" aria-label="Previous">
        <i class="bi bi-skip-backward-fill"></i>
      </button>
      <button class="me-3" aria-label="Play">
        <i class="bi bi-play-fill"></i>
      </button>
      <button class="me-3" aria-label="Pause">
        <i class="bi bi-pause-fill"></i>
      </button>
      <button class="me-3" aria-label="Next">
        <i class="bi bi-skip-forward-fill"></i>
      </button>
    </div>
  </nav>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</body>

</html>
